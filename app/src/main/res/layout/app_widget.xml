<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.CodeforcesHelper.AppWidget.Container"
    android:id="@+id/container"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:backgroundTint="#242526"
    android:gravity="center"
    android:theme="@style/Theme.CodeforcesHelper.AppWidgetContainer"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubunto_mono"
            android:text="@string/codeforces_status"
            android:textColor="#00AA00"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/linearLayout_error"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntumono_bold"
                android:text="Error 400. We Coundn't find your username"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|end"
            android:layout_marginEnd="12dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_monthly_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:fontFamily="@font/ubunto_mono"
                    android:textAlignment="center"
                    android:textColor="#6C92F4"
                    android:textSize="46sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solved_this_month"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/ubunto_mono"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:layout_marginStart="12dp"
                android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_daily_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:fontFamily="@font/ubunto_mono"
                    android:textAlignment="center"
                    android:textColor="#6C92F4"
                    android:textSize="46sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:text="@string/solved_this_day"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>